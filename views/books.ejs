<%- include("partials/header"); -%>

<div class="container mainPadding myFont1">

  <h1>Books</h1>
  <hr class="divider">

  

  <div class="row mb-2">
    <% for (let i = 0; i < data.length; i++) { %>
    <div class="col-md-12">
      <div class="row g-0 project  border overflow-auto flex-md-row mb-4  shadow-lg position-relative publications">
        <div class="col p-4 d-flex flex-column position-static">
          <h5 class="mb-0 thisColor myFont1"><%= data[i].bname %></h5> <br>
            <strong class="d-inline-block mb-2 thisColor1">Year of publication: <%= data[i].year %></strong>
            <strong class="d-inline-block mb-2 thisColor1">ISBN: <%= data[i].isbn %></strong>
          <div class="mb-1 text-muted">Authors: <%= data[i].authors %></div>
          <div class="mb-1 text-dark">
            Publisher: <%= data[i].publisher %>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>

</div>

<%- include("partials/footer"); -%>