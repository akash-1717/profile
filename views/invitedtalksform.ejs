<%- include("partials/header"); -%>

<div class="form-container">
  <form method="POST" action="/invtalksform" style="margin-top: 9rem;">
    <div class="form-group">
      <label for="title">Topic</label>
      <input type="text" id="" name="topic" placeholder="Enter topic">
    </div>
    <div class="form-group">
      <label for="journal">Event</label>
      <input type="text" id="" name="event" placeholder="Enter event/at">
    </div>
    <div class="form-group">
      <label for="year">Date</label>
      <input type="text" id="" name="date" placeholder="Enter Date (appears like On: 22nd Dec 2022 on submission)">
    </div>
    <div class="form-group">
      <input type="submit" value="Submit">
    </div>
  </form>
</div>

<%- include("partials/footer"); -%>